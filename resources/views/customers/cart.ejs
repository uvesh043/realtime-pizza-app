<section class="cart">
    <div class="order container mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-
           4">
            <img src="/img/cart-black.png" alt="">
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>
        <div class="pizza-list">
            <% for(let i=0;i<pizzaOrderList.length; i++ ){ %>
                <div class="flex items-center my-4"> 
                    <img class="w-24" src="/img/<%=pizzaOrderList[i].item.image %>" alt="">
                    <div v class="flex-1 ml-4">
                        <h1><%= pizzaOrderList[i].item.name %></h1>
                        <span><%= pizzaOrderList[i].item.size %></span>
                    </div>

                    <span class="flex-1"><%= pizzaOrderList[i].qty %></span>
                    <span class="font-bold text-lg"><%= pizzaOrderList[i].qty*pizzaOrderList[i].item.price %></span>
                  
                </div>
                <% }%>
        </div>
        <hr>
        <div class="text-right py-4">
            <div>
                <span class="text-lg font- bold">Total Amount </span>
                <span class="amount text-2xl font-bold"><%= session.cart.totalPrice %></span>
            </div>
            <div>
                <form class="mt-12" action="">
                    <input type="number" name="" class="border border-grey-400 p-2 w-1/2 mb-4 rounded-full" id=""
                        placeholder="Phone Number">
                    <input type="text" name="" class="border border-grey-400 p-2 w-1/2 rounded-full" id=""
                        placeholder="Address">
                    <div>
                        <!-- <button class="btn-primary px-6 py-2 rounded-full text-white mt-4"
                           type="submit" >Order Now</button>  -->
                        <a href=""
                            class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white mt-4">Login
                            To Continue</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
