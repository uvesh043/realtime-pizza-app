<section class="hero py-12">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2">
            <h6 class="text-lg"><em>Ary you hungry?</em></h6>
            <h1 class="text-6xl font-bold">Don't Wait !</h1>
            <button class="px-6 py-2 rounded-full  font-bold mt-4 btn-primary">Order Now</button>
        </div>
        <div class="w-1/2">
            <img src="/img/hero-pizza.png" alt="hero-pizza">
        </div>
    </div>
</section>
<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">All Pizza</h1>
    <div class="grid grid-cols-4 col-gap-12 row-gap-16">
        <% pizzas.forEach(function(pizza){ %>
            <div class="w-64 mb-5">
                <img class="h-40 mb-4 mx-auto" src="/img/<%=pizza.image%>" alt="pizza">
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%= pizza.name %></h2>
                    <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= pizza.size %></span>
                    <div class="flex item-center justify-around mt-5">
                        <span class="text-bold pt-2">$<%= pizza.price %></span>
                        <button data-pizza="<%=JSON.stringify(pizza)%>" class="add-to-cart px-6 py-1 rounded-full flex items-center font-bold"><span
                                class="mr-4">+</span>
                            <span>Add</span></button>
                    </div>
                </div>
            </div>
            <% })%>

    </div>
</section>